<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="verify"
            type="com.mmt.smartloan.module.VerifyModule" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/iv_top"
            android:layout_width="match_parent"
            android:layout_height="189dp"
            android:background="@mipmap/_smartloan_bg"
            app:layout_constraintTop_toTopOf="parent"></ImageView>

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:onClick="backToPreActivity"
            android:src="@mipmap/back"
            app:layout_constraintLeft_toLeftOf="@+id/tv_001"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>


        <TextView
            android:id="@+id/tv_001"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_marginLeft="25.5dp"
            android:text="Max"
            android:textColor="#ffffffff"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_002"
            app:layout_constraintLeft_toLeftOf="parent" />


        <TextView
            android:id="@+id/tv_002"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="57.5dp"
            android:text=" $30,000"
            android:textColor="#ffffffff"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/tv_001"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_003"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Depositar en 5 mins"
            android:textColor="#ffffffff"
            android:textSize="14.5sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/tv_001"
            app:layout_constraintTop_toBottomOf="@+id/tv_002" />

        <TextView
            android:id="@+id/tv_004"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrarse a percibirlo"
            android:textColor="#ffffffff"
            android:textSize="14.5sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/tv_001"
            app:layout_constraintTop_toBottomOf="@+id/tv_003" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_top">

            <EditText
                android:id="@+id/et_ver_code"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="28.5dp"
                android:background="@drawable/button_gray_login"
                android:gravity="center|left"
                android:hint="Código de verificación "
                android:inputType="number"
                android:maxLength="6"
                android:paddingLeft="15dp"
                android:text="@={verify.code}"
                android:textColorHint="#D2D2D2"
                android:textSize="16sp"
                app:layout_constraintHorizontal_weight="5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/tv_01"
                app:layout_constraintTop_toTopOf="parent"></EditText>

            <TextView
                android:id="@+id/tv_01"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="28.5dp"
                android:background="@drawable/shape_code_n"
                android:gravity="center"
                android:onClick="@{verify.onClick}"
                android:text="Conseguir"
                android:textColor="#A11134"
                android:textSize="14sp"
                app:layout_constraintHorizontal_weight="2.5"
                app:layout_constraintLeft_toRightOf="@+id/et_ver_code"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/login"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="28.5dp"
            android:layout_marginTop="30.5dp"
            android:layout_marginRight="28.5dp"
            android:background="@drawable/button_blue_login"
            android:gravity="center"
            android:onClick="@{verify.onClick}"
            android:text="Siguiente"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/cl"
            app:layout_constraintRight_toRightOf="@id/cl"
            app:layout_constraintTop_toBottomOf="@+id/cl"></TextView>

        <CheckBox
            android:id="@+id/cb"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="28.5dp"
            android:layout_marginBottom="66.5dp"
            android:button="@drawable/checkbox_style"
            android:checked="@{verify.check}"
            android:gravity="center"
            android:onClick="@{verify::onClick}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/cl"></CheckBox>

        <TextView
            android:id="@+id/tv_ys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.5dp"
            android:textColor="#333333"
            android:textSize="12sp"
            android:layout_marginTop="-2dp"
            app:layout_constraintLeft_toRightOf="@+id/cb"
            app:layout_constraintTop_toTopOf="@+id/cb">

        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>