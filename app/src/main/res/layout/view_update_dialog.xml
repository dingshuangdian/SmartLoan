<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/liveness_transparent"
    android:paddingBottom="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_update_dialog"
        android:paddingBottom="30.5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/iv_update_logo"
            android:layout_width="match_parent"
            android:layout_height="98.5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/bn" />

        <TextView
            android:id="@+id/tv_update_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_update_logo"
            tools:text="Nueva versión disponible" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.5dp"
            android:overScrollMode="never"
            app:layout_constraintLeft_toLeftOf="@+id/tv_update_title"
            app:layout_constraintRight_toRightOf="@+id/tv_update_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_update_title">

            <TextView
                android:id="@+id/tv_update_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:text="Por favor, actualice a la última versión"
                android:textColor="#666666"
                android:textSize="16sp" />
        </androidx.core.widget.NestedScrollView>

        <TextView
            android:id="@+id/btn_update_sure"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="33dp"
            android:background="@drawable/button_blue_login"
            android:gravity="center"
            android:text="Confirmar"
            android:textColor="@color/white"
            android:textSize="20.15sp"

            app:layout_constraintLeft_toLeftOf="@+id/tv_update_title"
            app:layout_constraintRight_toRightOf="@+id/tv_update_title"
            app:layout_constraintTop_toBottomOf="@+id/scrollView2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="30.5dp"
        android:background="@mipmap/delete"
        android:id="@+id/btn_update_cancel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl">

    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>
